<?xml version="1.0" encoding="UTF-8"?>
<auth version="0" type="blacklist" xmlns="http://www.verinice.org/auth"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.verinice.org/auth verinice-auth.xsd">
    
    <!-- This is the default configuration of access rights to application actions. -->
    <!-- NEVER edit this file! Use verinice-auth.xml instead. -->
    <!-- Settings in verinice-auth.xml overwrites settings in this file. -->
    
    <profiles>
        <!-- Each profile in this document defines a collection -->
        <!-- of application actions. All actions in verinice are -->
        <!-- defined in property file verinice-action.properties. -->
        <profile name="user-default-profile" origin="default">
            <action id="accountsettings" />
            <action id="accesscontrol" />
            <action id="editprofile" />
            <action id="taskdelete" />
            <action id="taskshowall" />
        </profile>
        <profile name="user-scope-default-profile" origin="default">
            <action id="accountsettings" />
            <action id="accesscontrol" />
            <action id="editprofile" />
            <action id="taskdelete" />
            <action id="taskshowall" />
            <action id="addismorg" />
            <action id="additverbund" />
        </profile>
        <profile name="admin-scope-default-profile" origin="default">
            <action id="addismorg" />
            <action id="additverbund" />
        </profile>
        <profile name="admin-default-profile" origin="default" />
    </profiles>
    <userprofiles>
        <!-- A userprofile defines a n:m mapping between users and -->
        <!-- profiles. Userprofiles are configured as whitelist or -->
        <!-- blacklist. Whitelist means: all actions are disabled -->
        <!-- except the actions in the userprofile. Blacklist: All  -->
        <!-- actions are nabled except the actions in the userprofile. -->
        <!-- You can switch from blacklist to whitelist by attibute type -->
        <!-- of root element auth. -->
        <userprofile login="user-default-group" origin="default">
            <profile-ref name="user-default-profile" />
        </userprofile>
        <userprofile login="admin-default-group" origin="default">
            <profile-ref name="admin-default-profile" />
        </userprofile>
        <userprofile login="admin" origin="default">
            <profile-ref name="admin-default-profile" />
        </userprofile>
        <userprofile login="user-scope-default-group" origin="default">
            <profile-ref name="user-scope-default-profile" />
        </userprofile>
        <userprofile login="admin-scope-default-group">
        	<profile-ref name="admin-scope-default-profile"/>
        </userprofile>
    </userprofiles>
</auth>