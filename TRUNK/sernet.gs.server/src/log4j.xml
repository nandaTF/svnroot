		<level value="DEBUG" />
	</logger>
	-->
	
	<!-- Control Import Logging -->
	<!--
	<logger name="sernet.verinice.iso27k.service.commands.ImportCatalog">
		<level value="DEBUG" />
	</logger>
	-->
	
	<!-- SQL -->
	<!--
	<logger name="org.hibernate.SQL">
		<level value="DEBUG" />
	</logger>
	-->
	
	<!-- SQL Parameter -->
	<!--
	<logger name="org.hibernate.type">
		<level value="TRACE" />
	</logger>
	-->
    
    <logger name="sernet.verinice.samt">
        <level value="DEBUG" />
    </logger>
    
	<!-- Logger for everything else -->
	<root>
		<priority value="WARN" />
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>

</log4j:configuration>
