<?xml version="1.0" encoding="UTF-8"?>

<process key="isa-quality-management" name="verinice ISA quality management process" version="1" xmlns="http://jbpm.org/4.4/jpdl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jbpm.org/4.4/jpdl jpdl.xsd">
   <description>ISA quality management process in verinice</description>

   <start g="332,25,80,40" name="start">
      <transition to="check feedback"/>
   </start>
   
   <decision g="332,134,48,48" name="check feedback">
      <transition g="-28,-72" name="no feedback" to="iqm.task.addFeedback">
        <condition expr="#{IQM_FEEDBACK==null}"/>
      </transition>
      <transition g="-118,-25" name="with feedback" to="iqm.task.setAssignee">
        <condition expr="#{IQM_FEEDBACK!=null}"/>
      </transition>
   </decision>
   
   <java class="sernet.verinice.bpm.qm.IsaQm" g="27,81,158,38" method="loadFeedback" name="java.loadFeedback" var="IQM_FEEDBACK">
      <arg><object expr="#{UUID}"/></arg>
      <transition to="check feedback"/>
   </java>
     
   <task assignee="#{ISA_ASSIGNEE_NAME}" g="15,197,183,52" name="iqm.task.addFeedback">
      <transition g="5,-9" name="iqm.trans.complete" to="java.loadFeedback"/>
   </task>

   <task g="270,245,171,52" name="iqm.task.setAssignee">
      <transition g="8,-12" name="iqm.trans.setAssignee" to="iqm.task.check"/>
      <transition name="iqm.trans.fix" to="java.reminderFixed" g="194,274:-151,5"/>
      <transition name="iqm.trans.noFix" to="java.reminderNotChanged" g="524,271:4,2"/>
   </task>
   
   <task assignee="#{IQM_ASSIGNEE}" g="292,330,127,52" name="iqm.task.check">
      <transition g="-55,-35" name="iqm.trans.fix" to="java.reminderFixed"/>
      <transition g="-23,-33" name="iqm.trans.noFix" to="java.reminderNotChanged"/>
   </task>
   
   <java class="sernet.verinice.bpm.Reminder" g="114,429,167,37" method="sendEmail" name="java.reminderFixed">
      <arg><object expr="REMINDER_FIXED"/></arg>
      <arg><object expr="#{ISA_ASSIGNEE_NAME}"/></arg>
      <arg><object expr="#{UUID}"/></arg>
      <transition to="end"/>
   </java>
   
   <java class="sernet.verinice.bpm.Reminder" g="417,425,211,37" method="sendEmail" name="java.reminderNotChanged">
      <arg><object expr="REMINDER_NOT_CHANGED"/></arg>
      <arg><object expr="#{ISA_ASSIGNEE_NAME}"/></arg>
      <arg><object expr="#{UUID}"/></arg>
      <transition to="end"/>
   </java>
   
   <end g="332,507,80,40" name="end"/>
   
</process>