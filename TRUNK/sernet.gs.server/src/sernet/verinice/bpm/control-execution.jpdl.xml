        <condition expr="#{IMPLEMENTATION=='control_implemented_yes'}"/>
      </transition>
   </decision>
   <task assignee="#{OWNER_NAME}" g="101,467,201,40" name="task.checkImplementation">
      <transition g="8,-15" name="transition.accepted" to="end"/>
      <transition g="7,5" name="transition.decline" to="load implementation"/>
   </task>
   <end g="179,575,48,48" name="end"/>
</process>