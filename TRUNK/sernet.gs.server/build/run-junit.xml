<project name="verinice" default="test" basedir="../">
    <description>ant buildfile to run JUnit-tests</description>

	<property name="reports" location="${basedir}/build/reports" />
	<property name="src.tests" location="testSrc" />
	<property name="bin" location="bin" />
	
	<path id="classpath.base">
		<fileset dir="${basedir}/WebContent/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
		<pathelement location="${basedir}/lib/el-api.jar" />
		<pathelement location="${basedir}/bin" />
	</path>
	<path id="classpath.test">
		<pathelement location="${basedir}/lib/com.springsource.org.junit-4.4.0.jar" />
		<pathelement location="${basedir}/lib/spring-test-2.5.6.jar" />		
		<path refid="classpath.base" />
	</path>
	
	<target name="test" description="runs JUnit tests">
		<mkdir dir="${reports}"/>
		<junit printsummary="yes" haltonfailure="no">
			<jvmarg value="-Dlog4j.configuration=log4j-test.xml" />
		  	<classpath refid="classpath.test" />
		  	<formatter type="xml"/>
			<batchtest fork="yes" todir="${reports}">
				<fileset dir="${src.tests}">
					<include name="**/*Test*.java"/>
				</fileset>
			</batchtest>
		</junit>	
	</target>
	
	<target name="test-oracle" description="runs JUnit tests">
		<rename src="${src.tests}/veriniceserver-plain.properties.test" dest="${src.tests}/veriniceserver-plain.properties.test.postgresql"/>
		<rename src="${src.tests}/veriniceserver-plain.properties.oracle" dest="${src.tests}/veriniceserver-plain.properties.test"/>
		<rename src="${bin}/veriniceserver-plain.properties.test" dest="${bin}/veriniceserver-plain.properties.test.postgresql"/>
		<rename src="${bin}/veriniceserver-plain.properties.oracle" dest="${bin}/veriniceserver-plain.properties.test"/>					
		<mkdir dir="${reports}"/>
		<junit printsummary="yes" haltonfailure="no">
			<jvmarg value="-Dlog4j.configuration=log4j-test.xml" />
		  	<classpath refid="classpath.test" />
		  	<formatter type="xml"/>
			<batchtest fork="yes" todir="${reports}">
				<fileset dir="${src.tests}">
					<include name="**/*Test*.java"/>
				</fileset>
			</batchtest>
		</junit>
		<rename src="${src.tests}/veriniceserver-plain.properties.test" dest="${src.tests}/veriniceserver-plain.properties.test.oracle"/>
		<rename src="${src.tests}/veriniceserver-plain.properties.postgresql" dest="${src.tests}/veriniceserver-plain.properties.test"/>
		<rename src="${bin}/veriniceserver-plain.properties.test" dest="${bin}/veriniceserver-plain.properties.test.oracle"/>
		<rename src="${bin}/veriniceserver-plain.properties.postgresql" dest="${bin}/veriniceserver-plain.properties.test"/>									
	</target>
	
	<rename src="foo.jar" dest="${name}-${version}.jar"/>
	

</project>