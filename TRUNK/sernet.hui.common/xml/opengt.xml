<huientities xmlns="http://www.sernet.de/hitro"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.sernet.de/hitro
               /work/home/aprack/java/workspace/sernet.hui.common/xml/hitro.xsd">

<huientity id="system" name="System" >

<huiproperty id="systemtype" name="Systemtypen" 
              inputtype="multioption" required="false">
	<option id="SYSTEMTYPE_0"  name="Firewall Linux" 		/>
	<option id="SYSTEMTYPE_1"  name="Firewall OpenBSD" 	    />
	<option id="SYSTEMTYPE_2"  name="Firewall sonstige" 	    />
	<option id="SYSTEMTYPE_3"  name="SerNet Email-Gateway (aka CIPE Gateway)"   />
	<option id="SYSTEMTYPE_4"  name="SSN-Box" 				/>
	<option id="SYSTEMTYPE_5"  name="Standby-System" 		/>
	<option id="SYSTEMTYPE_6"  name="Proxy-Server" 		    />
	<option id="SYSTEMTYPE_7"  name="Mailserver"             />
	<option id="SYSTEMTYPE_8"  name="Webserver"              />
	<option id="SYSTEMTYPE_9"  name="Samba-Server" 			/>
	<option id="SYSTEMTYPE_10" name="Interner Proxy" 			/>
	<option id="SYSTEMTYPE_11" name="Monitor-System" 		/>
	<option id="SYSTEMTYPE_32" name="Telefonie-Server"   />
	<option id="SYSTEMTYPE_33" name="Applikations-Server"   />
	<option id="SYSTEMTYPE_12" name="VPN-Gateway Linux" 	    />
	<option id="SYSTEMTYPE_13" name="VPN-Gateway Cisco" 	    />
	<option id="SYSTEMTYPE_14" name="VPN-Gateway BinTec" 	    />
	<option id="SYSTEMTYPE_15" name="VPN-Gateway sonstige" 	/>
	<option id="SYSTEMTYPE_16" name="Virtueller Linux Server (S3)" 	/>
	<option id="SYSTEMTYPE_17" name="Webserver (S1)" 	/>
	<option id="SYSTEMTYPE_18" name="Mail Relay (S2)" 	/>
	<option id="SYSTEMTYPE_19" name="VPN Relay" 	/>
	<option id="SYSTEMTYPE_20" name="Server Housing" 	/>
	<option id="SYSTEMTYPE_21" name="Cisco Router"         />
	<option id="SYSTEMTYPE_22" name="SFV/DDV (Standleitung)" />
	<option id="SYSTEMTYPE_23" name="ISDN Wählleitung" 	    />
	<option id="SYSTEMTYPE_24" name="A-DSL Wählleitung" 	/>
	<option id="SYSTEMTYPE_25" name="A-DSL Standleitung"     />
	<option id="SYSTEMTYPE_26" name="S-DSL Standleitung"     />
	<option id="SYSTEMTYPE_27" name="S2M/ATM Standleitung"   />
	<option id="SYSTEMTYPE_29" name="Frame Relay"   />
	<option id="SYSTEMTYPE_30" name="MPLS"   />
	<option id="SYSTEMTYPE_31" name="Access Point"   />
	<option id="SYSTEMTYPE_28" name="Sonstiges"   />
</huiproperty>



<huiproperty id="leitungsnr" name="Leitungsnr" tooltip="Hallo Welt"
             required="false">
	<depends  option="SYSTEMTYPE_22"/>
	<depends  option="SYSTEMTYPE_23"/>
	<depends  option="SYSTEMTYPE_24"/>
	<depends  option="SYSTEMTYPE_25"/>
	<depends  option="SYSTEMTYPE_26"/>
	<depends  option="SYSTEMTYPE_27"/>
	<depends  option="SYSTEMTYPE_27"/>
	<depends  option="SYSTEMTYPE_30"/>
</huiproperty>

<huiproperty id="antivir" name="Virenschutz" inputtype="singleoption" required="true"
tooltip="Virenschutz">
	<depends  option="SYSTEMTYPE_18"/>
    <option id="antivir1" name="Kein Virenschutz"/>
    <option id="antivir2" name="F-Secure Gatekeeper"   />
    <option id="antivir3" name="Trendmicro Virsuwall"   />
</huiproperty>

<huiproperty id="antispam" name="Spamschutz" inputtype="singleoption" required="true"
tooltip="Test">
	<depends  option="SYSTEMTYPE_18"/>
    <option id="antispam1" name="Kein Spamschutz"/>
    <option id="antispam2" name="Spamassassin"   />
</huiproperty>



<huiproperty id="colour" name="Farbe des Servers" inputtype="singleoption" required="true"
tooltip="Test">
    <option id="colour1" name="Schwarz"/>
    <option id="colour2" name="Beige"   />
    <option id="colour3" name="Braun"   />
</huiproperty>

<huipropertygroup id="termineGroup" name="Termine">
	<huiproperty name="Geprüft am" id="pruefdatum" required="true" inputtype="date"
	tooltip="Test"/>
	<huiproperty name="Nächste Prüfung" id="naechstpruefdatum" required="true" inputtype="date"
	tooltip="Test"/>
	<huiproperty name="Verantwortlich für Umsetzung" id="verantw"></huiproperty>
</huipropertygroup>

<huiproperty name="Bausteine" id="bausteinref" inputtype="reference"
	tooltip="Bausteine wählen um dieses Objekt abzubilden">
	<references entitytype="baustein" />
</huiproperty>

<huiproperty name="Mehr Bausteine" id="bausteinref2" inputtype="reference">
	<references entitytype="baustein" />
</huiproperty>

<huipropertygroup id="mehrtermine" name="Noch mehr Termine">
	<depends option="SYSTEMTYPE_0"/>
	<huiproperty name="Geprüft am" id="pruefdatum2" required="true" inputtype="date"
	tooltip="Test">
	</huiproperty>
	<huiproperty name="Nächste Prüfung" id="naechstpruefdatum2" required="true" inputtype="date"
	tooltip="Test">
	</huiproperty>
	<huiproperty name="Verantwortlich für Umsetzung" id="verantw2">
	</huiproperty>
</huipropertygroup>


</huientity>

<!--  NEW ENTITY  ######################################################################### -->

<huientity name="Baustein" id="baustein">
	<huiproperty name="Nr" id="nr"></huiproperty>
	<huiproperty name="Bezeichnung" id="bez"></huiproperty>
</huientity>
</huientities>
